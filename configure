#!/bin/sh

# Check for make
if [ -x "$(command -v make)" ]; then
    echo "make is installed."
else
    echo "make is not installed."
    exit 1
fi

# Check for python3
if [ -x "$(command -v python3)" ]; then
    echo "python3 is installed."
else
    echo "python3 is not installed."
    exit 1
fi

echo "All required dependencies are installed."
